<category>
  <rule id="doyouplaytennis">
    <case>
      <condition operator="and">
        <or>
          <if relation="in">do you</if>
          <if relation="in">don't you</if>
        </or>
        <or>
          <if relation="in">you play * tennis</if>
          <if relation="in">you like playing * tennis</if>
          <if relation="in">you watch * tennis</if>
          <if relation="in">you like watching * tennis</if>
        </or>
        <if relation="!in">type of</if>
        <if relation="!in">kind of</if>
        <if relation="!in">sort of</if>
        <if relation="!in">category</if>
      	<if relation="!in">who</if>
      	<if relation="!in">where</if>
      	<if relation="!in">why</if>
      	<if relation="!in">which</if>
      	<if relation="!in">when</if>
      	<if relation="!in">whose</if>
      	<if relation="!in">whom</if>
      	<if relation="!in">how</if>
      </condition>
			<effect>
				<then util="random" topic="tennisiplay">Yes. I like playing and watching tennis very much. You like it too?</then>
				<then util="random" topic="tennisiplay">Yes! Tennis is like a rocky road ice cream. Once tasted, always wanted. You like tennis too?</then>
				<then util="random" topic="tennisfeelit">Like it, love it, breath it, live it!</then>
			</effect>
    </case>
  </rule>
  <rule id="whoisyourfavtennisplayer">
    <case>
      <condition operator="or">
				<and>
				  <or>
	          <if relation="in">who</if>
	          <if relation="in">which</if>
	          <if relation="in">tell</if>
	          <if relation="in">do</if>
				  </or>
				  <or>
	          <if relation="in">you</if>
	          <if relation="in">your</if>
	          <if relation="in">me</if>
	          <if relation="in">us</if>
				  </or>
				  <or>
	          <if relation="in">like</if>
	          <if relation="in">love</if>
	          <if relation="in">favorite</if>
	          <if relation="in">keen</if>
				  </or>
					<or>
						<if relation="in">tennis player</if>
						<if relation="in">tennis players</if>
					</or>
				</and>
	      <if relation="in">you like * Roger Federer</if>
	      <if relation="in">you like * Novak Djokovic</if>
	      <if relation="in">you like * Rafael Nadal</if>
	      <if relation="in">you like * Maria Sharapova</if>
	      <if relation="in">you like * Ana Ivanovic</if>
	      <if relation="in">you like * Eugenie Bouchard</if>
      </condition>
			<effect>
				<then util="random" topic="tennisilike">Well, Roger Federer, Novak Djokovic, and Rafael Nadal are my favorite tennis players! They are amazingly skillful. How about you?</then>
				<then util="random" topic="tennisreply">I like watching Maria Sharapova, Ana Ivanovic, and Eugenie Bouchard playing. They are so attractive out there. Do you like them?</then>
			</effect>
    </case>
  </rule>
  <rule id="#tennisreplyyes">
    <case>
      <condition operator="or">
        <if relation="in">yes</if>
        <if relation="in">yeah</if>
        <if relation="in">sure</if>
        <if relation="in">why not</if>
				<and>
		      <if relation="in">of course</if>
		      <if relation="!in">not</if>
				</and>
        <if relation="in">too</if>
        <if relation="in">same</if>
        <if relation="in">i like</if>
      </condition>
			<effect>
				<then util="random" topic="tennis">Aha! I am happy to hear that!</then>
				<then util="random" topic="tennis">I am glad to hear that!</then>
			</effect>
    </case>
  </rule>
  <rule id="#tennisreplyno">
    <case>
      <condition operator="or">
        <if relation="in">no</if>
        <if relation="in">sorry</if>
        <if relation="in">don't</if>
        <if relation="in">can't</if>
        <if relation="in">cannot</if>
        <if relation="in">couldn't</if>
        <if relation="in">not</if>
      </condition>
			<effect>
				<then util="random" topic="tennis">That's okay, never mind.</then>
				<then util="random" topic="tennis">Oh I see, that's fine.</then>
				<then util="random" topic="tennis">Okay, no problem.</then>
			</effect>
    </case>
  </rule>
